<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#C7193D"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvUniversity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trường Đại Học Bách Khoa Hà Nội"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvFaculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viện Đào Tạo Liên Tục"
                android:textSize="16sp"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Các input thông tin sinh viên -->
        <EditText
            android:id="@+id/maSinhVienEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã sinh viên" />

        <EditText
            android:id="@+id/hoTenEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ tên" />

        <EditText
            android:id="@+id/ngaySinhEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày sinh" />

        <EditText
            android:id="@+id/sdtEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chụp 3 ảnh khuôn mặt"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chụp ảnh" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu sinh viên"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
